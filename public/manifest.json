{
  "manifest_version": 3,

  "name": "Snippet Expander Plugin",
  "description": "Save customized snippets and use it anywhere in your browser",
  "version": "1.0",

  "icons":{
    "16":"logo.png",
    "48":"logo.png",
    "128":"logo.png"
  },

  "action": {
    "default_icon":{
      "16":"logo.png",
      "24":"logo.png",
      "32":"logo.png"
    } ,
    "default_popup": "popup.html"
  },

  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["js/vendor.js", "js/content_script.js"]
      }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": [
    "storage",
    "input"
  ],

  "host_permissions": [
    "<all_urls>"
  ]
}
